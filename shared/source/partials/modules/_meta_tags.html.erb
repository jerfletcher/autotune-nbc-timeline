<meta charset="utf-8">
<meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

<title><%=page_title(current_page_data['seo_title']) %></title>
<% unless not_responsive %>
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=yes" />
<% end %>
<meta name="description" content="<%= strip_html(current_page_data['seo_description'] || meta_description) %>" />
<% if no_index %>
<meta name="robots" content="noindex, nofollow"/>
<% end%>

<%# OpenGraph Meta Tags %>
<meta property="fb:app_id" content="<%= facebook_app_id %>" />
<meta property="og:site_name" content="<%= site_name %>" />
<meta property="og:type" content="article" />
<meta property="og:title" content="<%=page_title %>" />
<meta property="og:image" content="<%=current_page_data['sharing_image_url'] || sharing_image %>" />
<meta property="og:description" content="<%= strip_html(current_page_data['seo_description'] || meta_description) %>" />
<meta property="og:url" content="<%=absolute_page_url(current_page_data['slug']).chomp('/') %>" />

<%# Twitter Card Meta Tags %>
<meta name="twitter:site" content="@<%= twitter %>" />
<meta property="twitter:account_id" content="<%= twitter_user_id %>" />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content="<%=absolute_page_url(current_page_data['slug']).chomp('/') %>" />
<meta name="twitter:title" content="<%=page_title %>" />
<meta name="twitter:tweet_text" content="<%= strip_html(current_page_data['twitter_text'] || current_page_data['seo_description'] || meta_description) %>" />
<meta name="twitter:description" content="<%= strip_html(current_page_data['seo_description'] || meta_description) %>" />
<meta name="twitter:image" content="<%=current_page_data['sharing_image_url'] || sharing_image %>" />
<meta name="twitter:image:src" content="<%=current_page_data['sharing_image_url'] || sharing_image %>" />
<meta name="twitter:image:width" content="1200" />
<meta name="twitter:image:height" content="630" />

<link rel="image_src" href="<%= current_page_data['sharing_image_url'] || sharing_image %>" />
<link rel="canonical" href="<%=absolute_page_url(current_page_data['slug']).chomp('/') %>" />
